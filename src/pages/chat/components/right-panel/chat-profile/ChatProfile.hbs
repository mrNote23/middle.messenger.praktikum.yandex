<div class="profile-header">
	<div id="back" class="back-btn" event-click="[[backBtn]]">
		<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24">
			<g data-name="Layer 2">
				<g data-name="arrowhead-left">
					<rect width="30" height="30" transform="rotate(90 12 12)" opacity="0"/>
					<path fill="#680a83"
						  d="M11.64 5.23a1 1 0 0 0-1.41.13l-5 6a1 1 0 0 0 0 1.27l4.83 6a1 1 0 0 0 .78.37 1 1 0 0 0 .78-1.63L7.29 12l4.48-5.37a1 1 0 0 0-.13-1.4z"/>
					<path fill="#680a83"
						  d="M14.29 12l4.48-5.37a1 1 0 0 0-1.54-1.28l-5 6a1 1 0 0 0 0 1.27l4.83 6a1 1 0 0 0 .78.37 1 1 0 0 0 .78-1.63z"/>
				</g>
			</g>
		</svg>
	</div>
	<div class="avatar">
		<img class="rounded-circle" src="{{avatar}}" alt="">
	</div>
	<div>
		<h2>Chat's profile</h2>
	</div>
</div>
<div class="profile-body">
	<div class="profile-avatar">
		<img src="{{avatar}}" alt="">
		<label for="avatar">Click to change
			<input hidden accept="image/*" type="file" id="avatar" name="avatar">
		</label>
	</div>
	<div class="profile-details">
		<h1 class="text-center">{{title}}</h1>
		<div class="profile-buttons pt-2">
			<button id="chat-rename" class="btn w-100" event-click="[[renameChat]]">Rename chat</button>
			<button id="chat-clear" class="btn w-100" event-click="[[clearChat]]">Clear chat</button>
			<button id="chat-delete" class="btn outline w-100" event-click="[[deleteChat]]">Delete chat</button>
		</div>
	</div>
</div>
