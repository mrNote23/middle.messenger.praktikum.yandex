<div class="profile-header">
	<div id="back" class="back-btn">
		<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24">
			<g data-name="Layer 2">
				<g data-name="arrowhead-left">
					<rect width="30" height="30" transform="rotate(90 12 12)" opacity="0"/>
					<path fill="#680a83"
						  d="M11.64 5.23a1 1 0 0 0-1.41.13l-5 6a1 1 0 0 0 0 1.27l4.83 6a1 1 0 0 0 .78.37 1 1 0 0 0 .78-1.63L7.29 12l4.48-5.37a1 1 0 0 0-.13-1.4z"/>
					<path fill="#680a83"
						  d="M14.29 12l4.48-5.37a1 1 0 0 0-1.54-1.28l-5 6a1 1 0 0 0 0 1.27l4.83 6a1 1 0 0 0 .78.37 1 1 0 0 0 .78-1.63z"/>
				</g>
			</g>
		</svg>
	</div>
	<div class="avatar">
		<img class="rounded-circle" src="{{chatAvatar}}" alt="">
	</div>
	<div class="text-left">
		<h2 class="m-0">{{chatTitle}}</h2>
		<h3 class="m-0">User's profile</h3>
	</div>
</div>
<div class="profile-body">
	<div class="profile-details">
		<div class="profile-avatar">
			<img src="{{avatar}}" alt="">
		</div>

		<div class="user-profile-info">
			<div class="item">
				<span>First Name</span>
				<span>{{first_name}}</span>
			</div>
			<div class="item">
				<span>Second Name</span>
				<span>{{second_name}}</span>
			</div>
			<div class="item">
				<span>Display Name</span>
				<span>{{display_name}}</span>
			</div>
			<div class="item">
				<span>Email</span>
				<span>{{email}}</span>
			</div>
			<div class="item">
				<span>Phone</span>
				<span>{{phone}}</span>
			</div>
			<div class="item">
				<span>Role</span>
				<span>{{role}}</span>
			</div>
		</div>

		<div class="pt-1 pb-1">
			<button id="user-delete" class="btn outline w-100">Delete user</button>
		</div>
	</div>

</div>
