<div class="profile-header">
	<div id="back" class="back-btn" event-click="[[btnBack]]">
		<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24">
			<g data-name="Layer 2">
				<g data-name="arrowhead-left">
					<rect width="30" height="30" transform="rotate(90 12 12)" opacity="0"/>
					<path fill="#680a83"
						  d="M11.64 5.23a1 1 0 0 0-1.41.13l-5 6a1 1 0 0 0 0 1.27l4.83 6a1 1 0 0 0 .78.37 1 1 0 0 0 .78-1.63L7.29 12l4.48-5.37a1 1 0 0 0-.13-1.4z"/>
					<path fill="#680a83"
						  d="M14.29 12l4.48-5.37a1 1 0 0 0-1.54-1.28l-5 6a1 1 0 0 0 0 1.27l4.83 6a1 1 0 0 0 .78.37 1 1 0 0 0 .78-1.63z"/>
				</g>
			</g>
		</svg>
	</div>
	<div class="avatar">
		<img class="rounded-circle" src="{{avatar}}" alt="">
	</div>
	<div>
		<h2>Your profile</h2>
	</div>
</div>
<div class="profile-body">
	<div class="profile-avatar">
		<img src="{{avatar}}" alt="">
		<label for="avatar">Click to change
			<input hidden accept="image/*" type="file" id="avatar" name="avatar">
		</label>
	</div>

	<div class="profile-details">
		<form id="admin-profile-form" event-submit="[[updateProfile]]">
			<div class="mb-1">
				<label>First name</label>
				<input class="form-control" type="text" name="first_name"
					   placeholder="John"/>
			</div>
			<div class="mb-1">
				<label for="second_name">Second name</label>
				<input class="form-control" type="text" name="second_name"
					   placeholder="Doe"/>
			</div>
			<div class="mb-1">
				<label for="display_name">Display name</label>
				<input class="form-control" type="text" name="display_name"
					   placeholder="John.D"/>
			</div>
			<div class="mb-1">
				<label for="login">Login</label>
				<input class="form-control" type="text" name="login"
					   placeholder="JohnD"/>
			</div>
			<div class="mb-1">
				<label for="email">Email</label>
				<input class="form-control" type="email" name="email"
					   placeholder="john@doe.com"/>
			</div>
			<div class="mb-1">
				<label for="phone">Phone number</label>
				<input class="form-control" type="text" name="phone"
					   placeholder="+7 123 123-123-12"/>
			</div>
			<div class="mb-1">
				<label for="password">Password</label>
				<input class="form-control" type="password" name="oldPassword"
					   placeholder="Password"/>
			</div>
			<div class="mb-2">
				<label for="confirm_password">New password</label>
				<input class="form-control" type="password"
					   name="newPassword"
					   placeholder="New password"/>
			</div>

			<div class="pt-1">
				<div class="text-center">
					<button class="btn w-100" type="submit">Update profile</button>
				</div>
			</div>
		</form>
		<button id="logout" class="btn outline w-100" event-click="[[btnLogout]]">Logout</button>
	</div>

</div>


</div>
