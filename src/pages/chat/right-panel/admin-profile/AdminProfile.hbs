<div class="profile-header">
	<div id="back" class="back-btn" event-click="[[btnBack]]">
		<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24">
			<g data-name="Layer 2">
				<g data-name="arrowhead-left">
					<rect width="30" height="30" transform="rotate(90 12 12)" opacity="0"/>
					<path fill="#680a83"
						  d="M11.64 5.23a1 1 0 0 0-1.41.13l-5 6a1 1 0 0 0 0 1.27l4.83 6a1 1 0 0 0 .78.37 1 1 0 0 0 .78-1.63L7.29 12l4.48-5.37a1 1 0 0 0-.13-1.4z"/>
					<path fill="#680a83"
						  d="M14.29 12l4.48-5.37a1 1 0 0 0-1.54-1.28l-5 6a1 1 0 0 0 0 1.27l4.83 6a1 1 0 0 0 .78.37 1 1 0 0 0 .78-1.63z"/>
				</g>
			</g>
		</svg>
	</div>
	<div class="avatar">
		<img class="rounded-circle" src="{{avatar}}" alt="">
	</div>
	<div>
		<h2>Your profile</h2>
	</div>
</div>
<div class="profile-body">
	<div class="profile-avatar">
		<img src="{{avatar}}" alt="">
		<label for="avatar">Click to change
			<input hidden accept="image/*" type="file" id="avatar" name="avatar">
		</label>
	</div>

	<div class="profile-details">
		<form novalidate>
			<div class="mb-1 input-container">
				<input
						class="form-control"
						type="text"
						name="first_name"
						id="first_name"
						placeholder=" "
				/>
				<label class="placeholder" for="first_name">First name</label>
			</div>
			<div class="mb-1 input-container">
				<input
						class="form-control"
						type="text"
						name="second_name"
						id="second_name"
						placeholder=" "
				/>
				<label class="placeholder" for="second_name">Second name</label>
			</div>
			<div class="mb-1 input-container">
				<input
						class="form-control"
						type="text"
						name="display_name"
						id="display_name"
						placeholder=" "
				/>
				<label class="placeholder" for="display_name">Display name</label>
			</div>
			<div class="mb-1 input-container">
				<input
						class="form-control"
						type="text"
						name="login"
						id="login"
						placeholder=" "
				/>
				<label class="placeholder" for="login">Login</label>
			</div>
			<div class="mb-1 input-container">
				<input
						class="form-control"
						type="email"
						name="email"
						id="email"
						placeholder=" "
				/>
				<label class="placeholder" for="email">Email</label>
			</div>
			<div class="mb-1 input-container">
				<input
						class="form-control"
						type="text"
						name="phone"
						id="phone"
						placeholder=" "
				/>
				<label class="placeholder" for="phone">Phone number</label>
			</div>
			<div class="mb-1 input-container">
				<input
						class="form-control"
						type="password"
						name="oldPassword"
						id="oldPassword"
						placeholder=" "
				/>
				<label class="placeholder" for="password">Password</label>
			</div>
			<div class="mb-2 input-container">
				<input
						class="form-control"
						type="password"
						name="newPassword"
						id="newPassword"
						placeholder=" "/>
				<label class="placeholder" for="confirm_password">New password</label>
			</div>

			<div class="pt-1">
				<div class="text-center">
					<button class="btn w-100" type="submit">Update profile</button>
				</div>
			</div>
		</form>
		<button id="logout" class="btn outline w-100" event-click="[[btnLogout]]">Logout</button>
	</div>

</div>


</div>
