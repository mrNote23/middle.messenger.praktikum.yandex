<div class="container d-table-cell vertical-align-middle">
	<div class="card card-auth">
		<div class="auth-header">
			<a class="router-link" href="/">
				<img class="logo-image" src="/images/logo.png" alt="">
			</a>
		</div>
		<div class="auth-body">
			<form event-submit="[[submitForm]]">
				<div class="mb-1">
					<!--					<label for="first_name">First name</label>-->
					<input
							class="form-control"
							type="text"
							name="first_name"
							placeholder="First name"
							autofocus
							event-keyup="[[onKeyup]]"
					/>
				</div>
				<div class="mb-1">
					<!--					<label for="second_name">Second name</label>-->
					<input
							class="form-control"
							type="text"
							name="second_name"
							placeholder="Second name"
					/>
				</div>
				<div class="mb-1">
					<!--					<label for="login">Login</label>-->
					<input
							class="form-control"
							type="text"
							name="login"
							placeholder="Login"
					/>
				</div>
				<div class="mb-1">
					<!--					<label for="email">Email</label>-->
					<input
							class="form-control"
							type="email"
							name="email"
							placeholder="Email"
					/>
				</div>
				<div class="mb-1">
					<!--					<label for="phone">Phone number</label>-->
					<input
							class="form-control"
							type="text"
							name="phone"
							placeholder="Phone number"
					/>
				</div>
				<div class="mb-1">
					<!--					<label for="password">Password</label>-->
					<input
							class="form-control"
							type="password"
							name="password"
							placeholder="Password"
					/>
				</div>
				<div class="mb-2">
					<!--					<label for="confirm_password">Confirm password</label>-->
					<input
							class="form-control"
							type="password"
							name="confirm_password"
							placeholder="Confirm password"
					/>
				</div>

				<div class="auth-error">Error</div>
				<div class="pt-1 pb-1">
					<div class="text-center">
						<button class="btn d-block w-100" type="submit">Register</button>
						<span class="register-link">
								Already have an account?
								<a class="router-link" href="/login">Sing in</a>
						</span>
					</div>
				</div>
			</form>
		</div>

	</div>
</div>
















